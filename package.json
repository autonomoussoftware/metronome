{
  "name": "metronome",
  "version": "1.0.0",
  "description": "Metronome Token",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "docker-build": "docker build -t qtum-dev .", 
    "docker-run": "docker run -it -v ${PWD}:/usr/src --network=\"host\" qtum-dev bash",
    "deploy": "node ./js/qtum/deploy.js deploy",
    "solhint": "solhint contracts/*.sol",
    "eslint": "eslint test/*.js timed-tests/*.js metronome-validator/lib/*.js metronome-validator/test/*.js",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "eslint",
    "solhint",
    "ganache:auctions",
    "ganache",
    "ganache:subs",
    "ganache:ac",
    "ganache:proceeds",
    "ganache:tokenLocker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MetronomeToken/metronome.git"
  },
  "keywords": [
    "eth",
    "token",
    "ethereum",
    "metronome"
  ],
  "bugs": {
    "url": "https://github.com/acmetoken/metronome/issues"
  },
  "homepage": "https://github.com/acmetoken/metronome#readme",
  "devDependencies": {
    "eslint": "^4.18.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "minimist": "^1.2.0",
    "pre-commit": "^1.2.2",
    "shelljs": "^0.8.3",
    "solhint": "^1.2.1",
    "truffle": "4.1.5"
  },
  "engines": {
    "node": "8",
    "npm": "5"
  },
  "dependencies": {
    "aws-sdk": "^2.259.1",
    "bignumber.js": "^6.0.0",
    "bn.js": "^4.11.8",
    "chai": "^4.1.2",
    "commander": "^2.19.0",
    "cron": "^1.3.0",
    "dotenv": "^6.2.0",
    "ethers": "^4.0.7",
    "ethjs-abi": "^0.2.1",
    "fs": "0.0.1-security",
    "ganache-cli": "^6.2.3",
    "lodash": "^4.17.5",
    "merkle-lib": "^2.0.10",
    "merkletreejs": "0.0.9",
    "mocha": "5.1.0",
    "qtumjs": "^1.9.1",
    "lerna": "^3.8.5",
    "web3": "https://github.com/bloq/web3.js/tarball/reconnect-resubscribe"
  }
}
