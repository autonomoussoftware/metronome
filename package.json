{
  "name": "metronome",
  "version": "1.0.0",
  "description": "Metronome Token",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "./test-all",
    "compile": "truffle compile",
    "migrate": "truffle migrate",
    "migrate:clean": "truffle migrate --reset",
    "solhint": "solhint contracts/*.sol",
    "eslint": "eslint test/*.js timed-tests/*.js",
    "testrpc": "kill -9 $(lsof -ti :8545) & (testrpc -e 1000 -a 15 > /dev/null & truffle test) && kill -9 $(lsof -ti :8545)",
    "testrpc:single": "kill -9 $(lsof -ti :8545) & (testrpc -e 1000 -a 15 > /dev/null & truffle test $TESTFILE) && kill -9 $(lsof -ti :8545)",
    "testrpc:subs": "kill -9 $(lsof -ti :8545) & (testrpc -e 1000 -a 15 > /dev/null & truffle test timed-tests/subscriptions.js) && kill -9 $(lsof -ti :8545)",
    "testrpc:ac": "kill -9 $(lsof -ti :8545) & (testrpc -e 1000 -a 100 > /dev/null & truffle test timed-tests/ac.js) && kill -9 $(lsof -ti :8545)",
    "testrpc:auctions": "kill -9 $(lsof -ti :8545) & (testrpc -e 1000 -a 15 > /dev/null & truffle test timed-tests/auctions.js) && kill -9 $(lsof -ti :8545)",
    "testrpc:proceeds": "kill -9 $(lsof -ti :8545) & (testrpc -e 1000 -a 15 > /dev/null & truffle test timed-tests/proceeds.js) && kill -9 $(lsof -ti :8545)",
    "testrpc:tokenLocker": "kill -9 $(lsof -ti :8545) & (testrpc -e 1000 -a 15 > /dev/null & truffle test timed-tests/tokenLocker.js) && kill -9 $(lsof -ti :8545)",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "eslint",
    "solhint",
    "testrpc:auctions",
    "testrpc",
    "testrpc:subs",
    "testrpc:ac",
    "testrpc:proceeds",
    "testrpc:tokenLocker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MetronomeToken/metronome.git"
  },
  "keywords": [
    "eth",
    "token",
    "ethereum",
    "metronome"
  ],
  "bugs": {
    "url": "https://github.com/acmetoken/metronome/issues"
  },
  "homepage": "https://github.com/acmetoken/metronome#readme",
  "devDependencies": {
    "eslint": "^4.18.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "pre-commit": "^1.2.2",
    "solhint": "^1.1.10",
    "truffle": "^4.0.6"
  },
  "engines": {
    "node": "8",
    "npm": "5"
  },
  "dependencies": {
    "chai": "^4.1.2",
    "ethjs-abi": "^0.2.1",
    "lodash": "^4.17.5",
    "web3": "^0.19.0"
  }
}
