GASARGS=" --min-gas-price 0"
RPCAPI="--jsonrpc-apis=web3,eth,personal,rpc,net,parity,parity_accounts,pubsub --ws-apis=web3,eth,personal,rpc,net,parity,parity_accounts,pubsub"
